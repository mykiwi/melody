{
    "name": "mykiwi/melody",
    "description": "One file composer scripts",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SensioLabs\\Melody\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SensioLabs\\Melody\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.3",
        "symfony/console": "^5.3",
        "symfony/filesystem": "^5.3",
        "symfony/process": "^5.3",
        "symfony/yaml": "^5.3",
        "symfony/finder": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mikey179/vfsstream": "^1.6",
        "symfony/phpunit-bridge": "^5.3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": ["bin/melody"]
}
